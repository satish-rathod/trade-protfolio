# Neon PostgreSQL Database Configuration
# Copy this file to .env and fill in your actual credentials
# Get your connection string from: https://console.neon.tech

# Database URL (from Neon dashboard)
DATABASE_URL=jdbc:postgresql://your-project.neon.tech/neondb?sslmode=require

# Database credentials
DB_USERNAME=your-neon-username
DB_PASSWORD=your-neon-password

# Optional: Spring profile (set to 'prod' for PostgreSQL, leave empty for H2)
SPRING_PROFILES_ACTIVE=prod

# Optional: Market engine URL
MARKET_SERVICE_URL=http://localhost:5000
